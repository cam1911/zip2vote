<!DOCTYPE html />
<html lang="en">
    <head>
        <title>Zip2Vote | Voting Made Simple</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />

{% block stylesheets %}
    {% stylesheets 
        'bootstrap/dist/css/bootstrap.css' 
        'bootstrap/dist/css/bootstrap-theme.css' 
        'fontawesome/css/fontawesome.css' 
        '@Zip2VoteVoteBundle/Resources/public/css/index.css' 
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts 
        'jquery/dist/jquery.js' 
        'bootstrap/dist/js/bootstrap.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Zip2Vote</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Register to Vote<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">New Application</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Voter Lookup</a></li>
                                </ul>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Polling Locations<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Early Voting</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Election Day Voting</a></li>
                                </ul>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Election Hub<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Important Dates</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Candidates</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Bills</a></li>
                                </ul>
                            </li>

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">My Profile</a></li>
                            <li><a href="#">Sign Up</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div>
            </nav>
        {% endblock %}
            <div class="container-fluid">
            {% block content %}
            {% endblock %}
                </div>
            </body>
        </html>